extends layout

block vars
  - title = 'Glare - Login to Your Account'

block content
  .row.login
    .col-md-offset-4.col-md-4
      p.big.bg-info.
        Login to your Glare account below.  Don't have an account?  Create one
        <a href='/register'>here</a>.

      form(role='form', method='post')
        .form-group
          input.form-control(type='email', name='username', placeholder='Email', autofocus, required)
        .form-group
          input.form-control(type='password', name='password', placeholder='Password', required)
        button.btn.btn-default(type='submit') Login
